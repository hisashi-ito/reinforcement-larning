<?xml version="1.0"?>
<robot name="racket">

    <link name="slideBar">
        <visual>
            <geometry>
                <box size="30 0.05 0.05"/>
            </geometry>
            <origin xyz="0 0 0"/>
            <material name="blue">
                <color rgba="0.6 0.7 0.8 0.7"/>
            </material>
        </visual>
        <inertial>
            <mass value="0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
    </link>

    <link name="racket">
        <visual>
            <geometry>
                <box size="0.5 0.5 0.2"/>
            </geometry>
            <origin xyz="0 0 0"/>
            <material name="black">
                <color rgba="0.3 0.3 0.3 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.5 0.5 0.2"/>
            </geometry>
            <origin xyz="0 0 0"/>
        </collision>
        <inertial>
            <mass value="1.0"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
        <contact>
            <lateral_friction value="1"/>
        </contact>
    </link>

    <joint name="slideBar-racket" type="prismatic">
        <axis xyz="1 0 0"/>
        <origin xyz="0.0 0.0 0.0"/>
        <parent link="slideBar"/>
        <child link="racket"/>
        <limit effort="1000.0" lower="-15" upper="15" velocity="5"/>
    </joint>

    <link name="leftWall">
        <visual>
            <geometry>
                <box size="0.1 2 2"/>
            </geometry>
            <material name="blue">
                <color rgba="0.6 0.7 0.8 0.7"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.1 2 2"/>
            </geometry>
        </collision>
        <contact>
            <lateral_friction value="1"/>
        </contact>    
    </link>    

    <joint name="slideBar-leftWall" type="fixed">
        <origin xyz="-2.4 0 1"/>
        <parent link="slideBar"/>
        <child link="leftWall"/>
    </joint>

    <link name="rightWall">
        <visual>
            <geometry>
                <box size="0.1 2 2"/>
            </geometry>
            <material name="blue">
                <color rgba="0.6 0.7 0.8 0.7"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.1 2 2"/>
            </geometry>
        </collision>
        <contact>
            <lateral_friction value="1"/>
        </contact>    
    </link>    

    <joint name="slideBar-rightWall" type="fixed">
        <origin xyz="2.4 0 1"/>
        <parent link="slideBar"/>
        <child link="rightWall"/>
    </joint>

</robot>